<!DOCTYPE html>
<html>
<head>
  <title>Premier League Table</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 1000px;
      margin: 50px auto;
      padding: 20px;
    }
    h1 {
      color: #37003c;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #37003c;
      color: white;
    }
    tr:hover {
      background-color: #f5f5f5;
    }
    .position {
      font-weight: bold;
      width: 40px;
    }
    .date-form {
      margin: 20px 0;
    }
    input[type="date"] {
      padding: 8px;
      font-size: 16px;
    }
    button {
      padding: 8px 16px;
      background-color: #37003c;
      color: white;
      border: none;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Premier League Table</h1>
  
  <div class="date-form">
    <form action="/table" method="GET">
      <label>View table as of: </label>
      <input type="date" name="date" value="<%= date %>" required>
      <button type="submit">Update Table</button>
    </form>
  </div>

  <table>
    <thead>
      <tr>
        <th class="position">Pos</th>
        <th>Team</th>
        <th>P</th>
        <th>W</th>
        <th>D</th>
        <th>L</th>
        <th>GF</th>
        <th>GA</th>
        <th>GD</th>
        <th>Pts</th>
      </tr>
    </thead>
    <tbody>
      <% standings.forEach((team, index) => { %>
        <tr>
          <td class="position"><%= index + 1 %></td>
          <td><%= team.team_name %></td>
          <td><%= team.played %></td>
          <td><%= team.won %></td>
          <td><%= team.drawn %></td>
          <td><%= team.lost %></td>
          <td><%= team.goals_for %></td>
          <td><%= team.goals_against %></td>
          <td><%= team.goal_difference %></td>
          <td><strong><%= team.points %></strong></td>
        </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>